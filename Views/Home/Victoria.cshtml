@{
    ViewData["Title"] = "Victoria";
}
@{
    Layout = null;
}
<head>
    <link rel="stylesheet" href="~/css/index.css" />
    <script>
        var horaInicio = localStorage.getItem("startTime");
        horaInicio = parseInt(horaInicio)
        var tiempoRestante = horaInicio - new Date().getTime();
        var minutes = Math.floor((tiempoRestante % 3600000) / 60000).toString().padStart(2, "0");
        var seconds = Math.floor((tiempoRestante % 60000) / 1000).toString().padStart(2, "0");
    </script>
</head>

<header>
    <h1 class="titulo">Felicidades, escapaste de la bombonera</h1>
</header>
<body>
    <div class="container">
        <div class="estadisticas">
            <h2 class="item">@ViewBag.Intentos</h2>
            <h3>Intentos</h3>
        </div>
        <div class="estadisticas">
            <h2 class="item">@ViewBag.pistasUsadas</h2>
            <h3>Pistas Utilizadas</h3>
        </div>
        <div class="estadisticas">
            <h2 class="item"><span id="tiempoRestante"></span></h2>
            <h3>Tiempo Restante</h3>
            <script>
                document.getElementById("tiempoRestante").innerHTML = minutes + ":" + seconds;
            </script>
        </div>
    </div>
</body>